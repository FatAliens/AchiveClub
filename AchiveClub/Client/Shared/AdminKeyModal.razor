<div class="adminKeyinput">
    <input type="text" placeholder="...ключ преподавателя..." @bind-value="_message" />
    <div class="buttons">
        <button id="buttonSubmit" @onclick="SubmitForm">Подтвердить</button>
    </div>
</div>

@code {

    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }

    private string _message;

    protected override void OnInitialized() => BlazoredModal.SetTitle("Передайте устройство преподавателю для подтверждения выполнения!");

    async Task SubmitForm() => await BlazoredModal.CloseAsync(ModalResult.Ok(_message));
}