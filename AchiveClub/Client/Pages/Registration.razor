@page "/registration"
@using AchiveClub.Shared.DTO
@inject LoginService _login
@inject NavigationManager _navigation

<!-----------------------------------nav----------------------------------------->
<header>
    <div class="header-wrapper">
        <div class="img">
            <img src="./image/gllg.png" alt="">
        </div>
        <div class="text-wrapper">
            <h3>
                Компания <m>It_Club</m>
            </h3>
        </div>
    </div>
</header>
<!-----------------------------------main----------------------------------------->
<main>
    <div class="content-wrapper">
        <div class="registerForm">
            <p><a @onclick="ToLogin">Войти в систему</a></p>
            <hr />
        </div>
        <div class="emailForm">
            <span>Имя</span>
            <input type="text" name="" id="emailInput">
        </div>
        <div class="passwordForm">
            <span>Фамилия</span>
            <input type="text" name="" id="passwordInput">
        </div>
        <div class="passwordForm">
            <span>Email</span>
            <input type="text" name="" id="passwordInput">
        </div>
        <div class="emailForm">
            <span>Место обучения</span>
            <input type="email" name="" id="passwordInput">
        </div>
        <div class="emailForm">
            <span>Пароль</span>
            <input type="email" name="" id="emailInput">
        </div>
        <div class="passwordForm">
            <span>Подтверждение пароля</span>
            <input type="password" name="" id="passwordInput">
        </div>
        <div class="submitButton">
            <button type="submit">Регистрация</button>
        </div>
    </div>
</main>

@code
{

    public void ToLogin()
    {
        _navigation.NavigateTo("/login");
    }
}